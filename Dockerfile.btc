FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install Python dependencies
COPY requirements_btc.txt .
RUN pip install --no-cache-dir -r requirements_btc.txt

# Copy all Python application files
COPY main_btc.py .
COPY kraken_trading_btc.py .
COPY llm_trading_strategy.py .
COPY technical_analysis.py .
COPY risk_management.py .
COPY db.py .
COPY grid_executor.py .
COPY utils_bool.py .
COPY price_worker.py .
COPY telemetry.py .
COPY auto_trade_scheduler.py .

# Create non-root user and writable data dir for SQLite
RUN useradd -m -u 1000 appuser \
    && mkdir -p /data \
    && chown -R appuser:appuser /app /data
USER appuser

# Expose port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=30s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/test_apis || exit 1

# Run the application with explicit Python path
CMD ["/usr/local/bin/python", "main_btc.py"] 